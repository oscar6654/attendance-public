<h1><b>Edit Memo</b></h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for(@memo_edit, url: memo_path(@memo_edit)) do |f| %>
      <div class="form-group">
        <label>Topic</label>
        <%= f.text_field :topic, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Body</label>
        <%= f.text_area :body, autofocus: true, class: 'form-control',  :cols => "5", :rows => "5" %>
      </div>
      <div class="form-group">
        <%= f.submit "Edit Memo", class: 'btn btn-success' %>
      </div>
    <%end%>
  </div>
</div>