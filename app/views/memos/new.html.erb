<h1><b>Create Coverage</b></h1>
<div class="row">
  <div class="col-md-8">
    <%= simple_form_for(@memo1, url: memos_path) do |f| %>
      <div class="form-group">
        <label>Topic</label>
        <%= f.text_field :topic, autofocus: true, class: 'form-control'%>
      </div>
      
      <div class="form-group">
        <label>Body</label>
        <%= f.text_area :body, autofocus: true, class: 'form-control',  :cols => "5", :rows => "5" %>
      </div>
      
      <div class="form-group">
        <%= submit_tag "Create Memo", class: 'btn btn-success' %>
      </div>
    <%end%>
  </div>
</div>