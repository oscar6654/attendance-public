<div class = "container"></div>
<h1> Employees</h1>
<table id = "working_hours1">
    <thead>
      <tr>
        <th data-sortable="true">Name</th>
        <th data-sortable="true">Position</th>
        <th data-sortable="true">Business Division</th>
        <th data-sortable="true">Region Assignment</th>
        <th data-sortable="true">Employment Status</th>
        <th data-sortable="true">Employment Type</th>
        <th data-sortable="true">Access Rights</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.position %></td>
        <td><%= user.division %></td>
        <td><%= user.region %></td>
        <%- if (user.is_active).to_s == 'true'%>
        <td>Active</td>
        <%-elsif (user.is_active).to_s == 'false'%>
        <td>Inactive</td>
        <%-else%>
        <td>Not Yet Assigned</td>
        <%end%>
        <td><%= user.employment_type %></td>
        <%- if(user.role).to_s == 'admin'%>
        <td>Administrator</td>
        <%-elsif (user.role).to_s == 'employee'%>
        <td>Employee</td>
        <%-else%>
        <td>Not Yet Assigned</td>
        <%end%>
      </tr>
      <%end%>
    </tbody>
</table>


</div>



