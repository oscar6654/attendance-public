<h1><b>Edit Discount Code</b></h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for(@code_edit, url: code_path(@code_edit)) do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Edit Discount Code", class: 'btn btn-success' %>
      </div>
    <%end%>
  </div>
</div>